                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Q-Learning"/>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="0 4 0 0">
                                    <TextBlock Text="Задержка между ходами, мс" Margin="6 0 0 0"/>
                                    <Slider Minimum="5" Maximum="500" Width="70" Value="{Binding RealtimeDelay}" Margin="4 0 0 0"/>
                                    <TextBlock Text="{Binding RealtimeDelay}" Width="30" Margin="4 0 6 0"/>
                                    <ComboBox ItemsSource="{Binding MapSelection}" SelectedItem="{Binding SelectedMapSelection}" Margin="4 0 6 0"/>
                                    <Button Content="Создать карту" Command="{Binding CreateMapQlearning_Click}" Padding="0 2" Margin="2 0"/>
                                    <TextBlock Text="{Binding PreviousEpsilon}" Margin="4 0 0 0"/>
                                    <Button Content="Включить/Отключить случайное действие" Command="{Binding EpsilonOnOffQlearning_Click}" Padding="0 2" Margin="2 0"/>
                                    <Button Content="Запустить" Command="{Binding StartQlearning_Click}" Width="72" Padding="0 2" Margin="2 0"/>
                                    <Button Content="Запустить перебор" Command="{Binding StartEnumerationQlearning_Click}" Padding="0 2" Margin="2 0"/>
                                    <Button Content="Остановить" Command="{Binding StopQlearning_Click}" Padding="0 2" Margin="2 0"/>
